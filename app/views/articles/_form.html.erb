<%= form_for @article do |f| %>

	<% if @article.errors.any? %>
		<div>
			<% @article.errors.full_messages.each do |msg| %>
				<p><%= msg %></p>
			<% end %>
		</div>
	<% end %>
	
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>
	
	<div>
		<%= f.submit %>
	</div>
	
<% end %>